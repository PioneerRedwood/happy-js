doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Document
    body 
    header 
      h1 ZOOM by Redwoody
    main
      h3 Always be full of passion!
      div#welcome
        form
          input(type="text", placeholder="Room name", required)
          button Enter room
      div#room
        h3
        ul
        form#name
          input(type="text", placeholder="write a name", required)
          button Save

        form#message
          input(type="text", placeholder="write a message", required)
          button Send

    script(src="socket.io/socket.io.js")
    script(src="public/js/app.js")